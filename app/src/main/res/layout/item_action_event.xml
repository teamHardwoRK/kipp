<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Today"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        style="?android:listSeparatorTextViewStyle"/>

    <ImageView
        android:id="@+id/ivActionIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/tvHeader"/>

    <TextView
        android:id="@+id/tvActionTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/ivActionIcon"
        android:text="@string/default_action_type_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_timestamp"
        android:textColor="#8B939A"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/tvActionTypeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>