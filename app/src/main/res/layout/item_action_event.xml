<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/default_student_name"
        />
    <TextView
        android:id="@+id/tvActionTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStudentName"
        android:text="@string/default_action_type_name"
        />
    <TextView
        android:id="@+id/tvEventTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvActionTypeName"
        android:text="@string/default_timestamp"
        />
</RelativeLayout>