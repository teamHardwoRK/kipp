<resources>
    <style name="KippTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="actionBarTabTextStyle">@style/KippTheme.ActionBar.TabText</item>
        <item name="actionBarTabStyle">@style/KippTheme.ActionBar.TabStyle</item>
    </style>

    <style name="KippTheme.ActionBar.TabStyle" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@drawable/bg_action_tab</item>
    </style>

    <style name="KippTheme.ActionBar.TabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/ActionBarGreen</item>
    </style>

    <!-- Buttons -->
    <style name="LoginButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/LightJade</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/states_btn_green</item>
    </style>

    <!-- List -->
    <style name="ListBackContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">#aaaccc</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@color/background_list_front</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="ListImage">
        <item name="android:layout_width">@dimen/size_list_image</item>
        <item name="android:layout_height">@dimen/size_list_image</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="ListTitle">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListDescription">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListButtonAction">
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Settings -->

    <style name="SettingTitle">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingContent">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_setting</item>
    </style>

    <style name="SettingText">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_default</item>
    </style>

    <style name="New">
        <item name="android:textColor">@color/text_new_tag</item>
        <item name="android:textSize">@dimen/font_size_new_tag</item>
        <item name="android:text">NewTag</item>
        <item name="android:background">#dddaaa</item>
        <item name="android:padding">@dimen/padding_new_tag</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogSlideTopBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
</resources>
