<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="KippTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/KippTheme.ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/KippTheme.ActionBar.TabBarTextStyle</item>
    </style>

    <style name="KippTheme.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#22BD89</item>
        <item name="android:titleTextStyle">@style/KippTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="KippTheme.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="KippTheme.ActionBar.TabBarTextStyle" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/Black</item>
    </style>

    <!-- Buttons -->
    <style name="LoginButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/LightJade</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/states_btn_green</item>
    </style>

    <!-- List -->
    <style name="ListBackContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">#aaaccc</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@color/background_list_front</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="ListImage">
        <item name="android:layout_width">@dimen/size_list_image</item>
        <item name="android:layout_height">@dimen/size_list_image</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="ListTitle">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListDescription">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListButtonAction">
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Settings -->

    <style name="SettingTitle">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingContent">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_setting</item>
    </style>

    <style name="SettingText">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_default</item>
    </style>

    <style name="New">
        <item name="android:textColor">@color/text_new_tag</item>
        <item name="android:textSize">@dimen/font_size_new_tag</item>
        <item name="android:text">NewTag</item>
        <item name="android:background">#dddaaa</item>
        <item name="android:padding">@dimen/padding_new_tag</item>
    </style>
</resources>
